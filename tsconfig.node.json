{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@alienfast/tsconfig/node.json",
  "display": "Node related config files for IDE type checking and linting.  See packages/*/tsconfig.json for code.",

  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "composite": true,
    "outDir": "dist-node"
  },
  "include": [
    ".eslintrc.cjs",
    "vite.config.ts",
    "vitest.config.ts",
    "tsup.config.ts",
    "./packages/*/tsup.config.ts",
    "scripts/*.js",
    ".storybook/*.ts*",
    ".storybook/preview.tsx",
    "./packages/*/src"
  ]
}
